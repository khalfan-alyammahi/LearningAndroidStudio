<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/movies_Rel_Layout"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp">

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Harry Potter"
           android:id="@+id/check_box_harry"
           android:checked="false"
           android:buttonTint="@android:color/holo_green_light" />

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="The Matrix"
           android:id="@+id/check_box_Matrix"
           android:checked="false"
           android:buttonTint="@android:color/holo_green_light"
           android:layout_toRightOf="@+id/check_box_harry"
           android:layout_marginLeft="15dp"/>

       <CheckBox
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Joker"
           android:id="@+id/check_box_Joker"
           android:checked="false"
           android:buttonTint="@android:color/holo_green_light"
           android:layout_toRightOf="@+id/check_box_Matrix"
           android:layout_marginLeft="15dp"/>

   </RelativeLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movies_Rel_Layout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/rgMaritalState">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbMarried"
            android:text="Married"
            android:checked="true"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbSingle"
            android:text="Single"
            android:layout_marginLeft="15dp"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbInRel"
            android:text="In a Relationship"
            android:layout_marginLeft="15dp"/>
    </RadioGroup>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="visible"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>